#local {{ server1.novpn_ip }} 
port 1194
proto udp
dev tun
server {{ vpn.gate }} {{ vpn.mask }}
push "dhcp-option DNS 77.88.8.8"
client-config-dir /etc/openvpn/ccd
ifconfig-pool-persist /etc/openvpn/client.list
client-to-client
keepalive 10 120
cipher DES-CBC
comp-lzo
max-clients 10
persist-key
persist-tun
status /var/log/openvpn/openvpn-status.log

ca /etc/openvpn/cert/ca.crt
cert /etc/openvpn/cert/vpn-server.crt
key /etc/openvpn/cert/vpn-server.key
dh /etc/openvpn/cert/dh.pem
